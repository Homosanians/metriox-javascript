{
  "name": "metriox-javascript",
  "version": "0.1.6",
  "description": "Metriox SDK",
  "license": "ISC",
  "author": "Alexander Emelyanov",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Homosanians/metriox-javascript/.git"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "default": "./dist/index.esm.js"
    },
    "./react": {
      "import": "./dist/react/index.esm.js"
    },
    "./iife": "./dist/metriox-tg-webapp.min.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "react": ">=17"
  },
  "scripts": {
    "dev": "node esbuild.config.mjs --watch",
    "lint": "eslint .",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "build": "node esbuild.config.mjs && tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:debug": "node esbuild.config.mjs",
    "build:test": "npm run build && npm run test && npm run typecheck",
    "deploy:npm": "npm publish --access public"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "jsdom": "^27.4.0",
    "react-test-renderer": "^18.2.0",
    "@types/react-test-renderer": "^18.0.0",
    "@testing-library/react": "^14.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
